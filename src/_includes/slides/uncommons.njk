<section
{%if config.useArtwork%} 
data-background-image="images/art/art{{key}}.png" 
{% else %}
data-background-image="{{"../images/"+config.themeImage | url }}" 
{%endif%}
 data-background-opacity="0.5">

    <div class="w-full 
    bg-gradient-to-br from-yellow-600/30 via-60% via-red-900/60 to-yellow-600/30 drop-shadow-lg rounded-md">
        <h4>{{pack.uncommons.head}}</h4>
        <div class="">
            <hr class="mx-5">
			<div class="w-full grid grid-cols-4 px-12 aspect-video grid-rows-1">

                {%for card in pack.uncommons.cards%}
                <div class="grid place-items-center r-stack shiny">
                    <img data-fragment-index="{{loop.index + 1}}" class="fragment fade-out shadow-xl  opacity-100 rounded-xl" data-src="images/card_back.jpg">
                    <div id ="{{key + "-unc" + "_" + loop.index}}" scry="{{card.id}}"  class="fragment fade-down " data-fragment-index="{{loop.index + 1}}">
                        <div class="FlipButton bg-gray-900 cursor-pointer drop-shadow-sm hover:text-yellow-200 text-white text-md rounded-lg rounded-tr-3xl z-10 font-bold px-3 bg-opacity-50 absolute bottom-4 left-0"
										onclick="toggleImg('{{ key + '-unc' + '_' + loop.index }}')" >&#10227;</div>	
                        <a class="grid place-items-center p-0 r-stack" target="_blank" href="#">
                            <div class="
                            {% if card.foil%}foil-image  {% endif %} p-0 w-full grid place-items-center h-full rounded-3xl">
                            <img  class="card-image shadow-md w-full opacity-100 rounded-xl" data-src  onerror="populateFoilCard('{{key + '-unc' + '_' + loop.index}}')">
                            </div>
                        </a>

                    </div>  
                </div>
                {%endfor%}
               
               

            </div>
        </div>
    </div>

</section>


